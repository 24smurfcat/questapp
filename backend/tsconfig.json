{
    "compilerOptions": {
        "outDir": "./dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "tests/**/*", "playwright.config.ts"],
    "exclude": ["node_modules"]
}
